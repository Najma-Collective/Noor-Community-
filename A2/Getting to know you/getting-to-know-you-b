                <!-- Slide 20 -->
                <div class="slide-stage hidden">
                    <div class="slide-inner">
                        <span class="pill"><i class="fa-solid fa-leaf"></i> Reflection</span>
                        <h2>Let's reflect</h2>
                        <div class="card">
                            <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.85rem;">
                                <li>What was the most interesting thing you learned about a classmate today?</li>
                                <li>Which phrase feels easier now: “I like...” or “I sometimes...”?</li>
                                <li>What was the most challenging part of our main task?</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <button class="slide-nav slide-nav-prev" aria-label="Previous slide"><i class="fa-solid fa-chevron-left"></i></button>
                <button class="slide-nav slide-nav-next" aria-label="Next slide"><i class="fa-solid fa-chevron-right"></i></button>
            </div>
        </main>
    </div>

    <script>
      const slides = Array.from(document.querySelectorAll('.slide-stage'));
      const nextBtn = document.querySelector('.slide-nav-next');
      const prevBtn = document.querySelector('.slide-nav-prev');
      const slideCounter = document.getElementById('slide-counter');
      let currentSlide = 0;

      function updateSlideCounter() {
        slideCounter.textContent = `${currentSlide + 1} / ${slides.length}`;
      }

      function showSlide(index) {
        slides.forEach((slide, idx) => {
          slide.classList.toggle('hidden', idx !== index);
        });
        currentSlide = index;
        updateSlideCounter();
      }

      function navigate(direction) {
        const nextIndex = currentSlide + direction;
        if (nextIndex >= 0 && nextIndex < slides.length) {
          showSlide(nextIndex);
        }
      }

      nextBtn.addEventListener('click', () => navigate(1));
      prevBtn.addEventListener('click', () => navigate(-1));

      document.addEventListener('keydown', (event) => {
        if (event.key === 'ArrowRight') navigate(1);
        if (event.key === 'ArrowLeft') navigate(-1);
      });

      updateSlideCounter();

      // Multiple choice checker
      const mcSlide = document.querySelector('[data-activity="mc-check"]');
      if (mcSlide) {
        const checkBtn = mcSlide.querySelector('[data-action="check"]');
        const resetBtn = mcSlide.querySelector('[data-action="reset"]');
        const feedback = mcSlide.querySelector('.feedback-msg');
        const cards = mcSlide.querySelectorAll('.mc-card');

        checkBtn.addEventListener('click', () => {
          let correctCount = 0;
          cards.forEach(card => {
            const select = card.querySelector('select');
            const expected = card.dataset.answer;
            const isCorrect = select.value === expected;
            card.style.borderColor = isCorrect ? 'rgba(76,175,80,0.55)' : 'rgba(214,69,69,0.65)';
            card.style.boxShadow = isCorrect ? '0 0 0 3px rgba(76,175,80,0.18)' : '0 0 0 3px rgba(214,69,69,0.18)';
            if (isCorrect) correctCount += 1;
          });
          if (correctCount === cards.length) {
            feedback.textContent = 'Excellent! All of your answers are correct.';
            feedback.className = 'feedback-msg success';
          } else {
            feedback.textContent = 'Keep trying! Check the verb forms with -ing and try again.';
            feedback.className = 'feedback-msg error';
          }
        });

        resetBtn.addEventListener('click', () => {
          cards.forEach(card => {
            const select = card.querySelector('select');
            select.value = '';
            card.style.borderColor = 'rgba(122,132,113,0.18)';
            card.style.boxShadow = 'var(--shadow-1)';
          });
          feedback.textContent = '';
          feedback.className = 'feedback-msg';
        });
      }

      // Gap-fill checker
      const gapSlide = document.querySelector('[data-activity="gapfill"]');
      if (gapSlide) {
        const checkBtn = gapSlide.querySelector('[data-action="check"]');
        const resetBtn = gapSlide.querySelector('[data-action="reset"]');
        const feedback = gapSlide.querySelector('.feedback-msg');
        const cards = gapSlide.querySelectorAll('.gapfill-card');

        function normalise(text) {
          return text.trim().toLowerCase();
        }

        checkBtn.addEventListener('click', () => {
          let correctCount = 0;
          cards.forEach(card => {
            const inputs = card.querySelectorAll('input');
            const verbInput = normalise(inputs[0].value);
            const reasonInput = normalise(inputs[1].value);
            const expectedVerb = card.dataset.answer;
            const expectedReason = card.dataset.reason.split('|').map(normalise);
            const verbOk = verbInput === expectedVerb;
            const reasonOk = expectedReason.includes(reasonInput);
            const isCorrect = verbOk && reasonOk;
            card.style.borderColor = isCorrect ? 'rgba(76,175,80,0.55)' : 'rgba(214,69,69,0.65)';
            card.style.boxShadow = isCorrect ? '0 0 0 3px rgba(76,175,80,0.18)' : '0 0 0 3px rgba(214,69,69,0.18)';
            if (isCorrect) correctCount += 1;
          });
          if (correctCount === cards.length) {
            feedback.textContent = 'Great work! Your sentences link routines and reasons clearly.';
            feedback.className = 'feedback-msg success';
          } else {
            feedback.textContent = 'Check the -ing forms and add a reason starting with "because".';
            feedback.className = 'feedback-msg error';
          }
        });

        resetBtn.addEventListener('click', () => {
          cards.forEach(card => {
            const inputs = card.querySelectorAll('input');
            inputs.forEach(input => input.value = '');
            card.style.borderColor = 'rgba(122,132,113,0.18)';
            card.style.boxShadow = 'var(--shadow-1)';
          });
          feedback.textContent = '';
          feedback.className = 'feedback-msg';
        });
      }

      // Grouping activity
      const groupingSlide = document.querySelector('[data-activity="grouping"]');
      if (groupingSlide) {
        const pool = groupingSlide.querySelector('[data-pool]');
        const dropZones = groupingSlide.querySelectorAll('[data-target]');
        const checkBtn = groupingSlide.querySelector('[data-action="check"]');
        const resetBtn = groupingSlide.querySelector('[data-action="reset"]');
        const feedback = groupingSlide.querySelector('.feedback-msg');

        const answers = {
          calm: ['reading', 'yoga', 'podcasts'],
          exciting: ['gaming', 'cooking', 'hiking']
        };

        let selectedItem = null;

        function updateEmptyStates() {
          const poolItems = pool.querySelectorAll('[data-item]').length;
          pool.dataset.empty = poolItems === 0 ? 'true' : 'false';
          dropZones.forEach(zone => {
            const count = zone.querySelectorAll('[data-item]').length;
            zone.dataset.empty = count === 0 ? 'true' : 'false';
          });
        }

        function clearSelection() {
          if (selectedItem) {
            selectedItem.classList.remove('is-selected');
            selectedItem = null;
          }
        }

        function handleItemClick(item) {
          if (selectedItem === item) {
            item.classList.remove('is-selected');
            selectedItem = null;
          } else {
            if (selectedItem) selectedItem.classList.remove('is-selected');
            selectedItem = item;
            item.classList.add('is-selected');
          }
        }

        function moveItem(container, item) {
          container.appendChild(item);
          item.classList.remove('is-selected');
          selectedItem = null;
          updateEmptyStates();
        }

        const containers = [pool, ...dropZones];
        containers.forEach(container => {
          container.addEventListener('click', event => {
            const item = event.target.closest('[data-item]');
            if (item && container.contains(item)) {
              handleItemClick(item);
              event.stopPropagation();
            } else if (selectedItem) {
              moveItem(container, selectedItem);
            }
          });
        });

        updateEmptyStates();

        checkBtn.addEventListener('click', () => {
          clearSelection();
          let allCorrect = true;
          dropZones.forEach(zone => {
            const target = zone.dataset.target;
            const expected = answers[target];
            const items = Array.from(zone.querySelectorAll('[data-item]')).map(el => el.dataset.item);
            const isCorrect = items.every(item => expected.includes(item)) && expected.every(item => items.includes(item));
            zone.style.borderColor = isCorrect ? 'rgba(76,175,80,0.55)' : 'rgba(214,69,69,0.65)';
            zone.style.boxShadow = isCorrect ? '0 0 0 3px rgba(76,175,80,0.18)' : '0 0 0 3px rgba(214,69,69,0.18)';
            if (!isCorrect) allCorrect = false;
          });
          if (allCorrect) {
            feedback.textContent = 'Excellent sorting! You matched each hobby to the best feeling.';
            feedback.className = 'feedback-msg success';
          } else {
            feedback.textContent = 'Not quite yet. Think about how calm or exciting each hobby feels.';
            feedback.className = 'feedback-msg error';
          }
        });

        resetBtn.addEventListener('click', () => {
          clearSelection();
          dropZones.forEach(zone => {
            const items = Array.from(zone.querySelectorAll('[data-item]'));
            items.forEach(item => pool.appendChild(item));
            zone.style.borderColor = 'rgba(122,132,113,0.35)';
            zone.style.boxShadow = 'var(--shadow-1)';
          });
          pool.style.borderColor = 'rgba(122,132,113,0.35)';
          pool.style.boxShadow = 'var(--shadow-1)';
          feedback.textContent = '';
          feedback.className = 'feedback-msg';
          updateEmptyStates();
        });
      }
    </script>
</body>
</html>
