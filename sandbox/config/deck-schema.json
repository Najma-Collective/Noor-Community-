          "minLength": 1
        }
      },
      "required": ["label", "value"]
    },
    "moduleConfig": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1
        },
        "presetId": {
          "type": "string",
          "minLength": 1
        },
        "data": {
          "type": "object"
        },
        "html": {
          "type": "string"
        }
      }
    },
