{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://noor.community/schemas/sandbox-deck.json",
  "title": "Sandbox Deck Brief",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1
    },
    "lang": {
      "type": "string",
      "pattern": "^[A-Za-z]{2,3}(?:-[A-Za-z0-9]{2,8})*$"
    },
    "brand": {
      "$ref": "#/$defs/brand"
    },
    "theme": {
      "type": "string",
      "minLength": 1
    },
    "pexelsKey": {
      "type": "string",
      "minLength": 1
    },
    "assetManifest": {
      "type": "object"
    },
    "assets": {
      "type": "object"
    },
    "deckBrief": {
      "type": "object"
    },
    "slides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/slide"
      }
    }
  },
  "required": ["slides"],
  "$defs": {
    "brand": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "logo": {
          "$ref": "#/$defs/imageSource"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "accentColor": {
          "$ref": "#/$defs/colorToken"
        }
      }
    },
    "colorToken": {
      "type": "string",
      "pattern": "^(#[0-9A-Fa-f]{3}(?:[0-9A-Fa-f]{3})?|[a-zA-Z][a-zA-Z0-9-]*)$"
    },
    "iconClass": {
      "type": "string",
      "minLength": 1
    },
    "imageSource": {
      "oneOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "pexelsQuery": {
              "type": "string",
              "minLength": 1
            },
            "fallback": {
              "type": "string",
              "minLength": 1
            },
            "alt": {
              "type": "string"
            },
            "credit": {
              "type": "string"
            },
            "photoId": {
              "type": ["string", "integer"]
            },
            "src": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "includeCredit": {
              "type": "boolean"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": ["pexelsQuery"]
        }
      ]
    },
    "linkUrl": {
      "type": "string",
      "format": "uri"
    },
    "stringArray": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "turn": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "speaker": {
          "type": "string",
          "minLength": 1
        },
        "line": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["speaker", "line"]
    },
    "mcQuestion": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "prompt": {
          "type": "string",
          "minLength": 1
        },
        "options": {
          "$ref": "#/$defs/stringArray"
        },
        "answer": {
          "type": "string",
          "minLength": 1
        },
        "explanation": {
          "type": "string"
        }
      },
      "required": ["prompt", "options", "answer"]
    },
    "cardItem": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "icon": {
          "$ref": "#/$defs/iconClass"
        }
      },
      "required": ["title"]
    },
    "galleryItem": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "image": {
          "$ref": "#/$defs/imageSource"
        },
        "alt": {
          "type": "string"
        },
        "caption": {
          "type": "string"
        },
        "credit": {
          "type": "string"
        }
      },
      "required": ["image"]
    },
    "roleItem": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["label", "value"]
    },
    "featureItem": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "value": {
