            "maximum": 100
          },
          "goalIcon": {
            "$ref": "#/$defs/iconClass"
          },
          "communicativeGoalIcon": {
            "$ref": "#/$defs/iconClass"
          },
          "layoutIcon": {
            "$ref": "#/$defs/iconClass"
          }
        },
        "required": ["title", "goals", "communicativeGoal"]
      },
      "model-dialogue": {
