                <div class="slide-nav slide-nav-prev" onclick="navigateSlides(-1)"><i class="fas fa-chevron-left"></i></div>
                <div class="slide-nav slide-nav-next" onclick="navigateSlides(1)"><i class="fas fa-chevron-right"></i></div>
            </div>
        </main>
    </div>

    <script>
        let currentSlide = 1;
        const slides = document.querySelectorAll('.slide-stage');
        const totalSlides = slides.length;
        const slideCounter = document.getElementById('slideCounter');
        function showSlide(index) { slides.forEach((slide, i) => { slide.classList.toggle('hidden', i + 1 !== index); }); slideCounter.textContent = `Slide ${index} of ${totalSlides}`; }
        function navigateSlides(direction) { currentSlide += direction; if (currentSlide > totalSlides) { currentSlide = 1; } if (currentSlide < 1) { currentSlide = totalSlides; } showSlide(currentSlide); }
        const activityStates = {};
        function changeRound(activityId) { const container = document.getElementById(activityId); if (!container) return; const rounds = container.querySelectorAll('.round'); if (rounds.length === 0) return; if (activityStates[activityId] === undefined) { activityStates[activityId] = 0; } let currentRoundIndex = activityStates[activityId]; rounds[currentRoundIndex].classList.remove('active'); currentRoundIndex = (currentRoundIndex + 1) % rounds.length; rounds[currentRoundIndex].classList.add('active'); activityStates[activityId] = currentRoundIndex; }
        document.addEventListener('DOMContentLoaded', () => { showSlide(currentSlide); });
    </script>
</body>
</html>
