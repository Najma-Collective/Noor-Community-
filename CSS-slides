/* -------------------------------
   Design tokens
----------------------------------*/
:root {
  /* Palette (earthy, calm) */
  --primary-sage: #7A8471;
  --secondary-sage: #9CAF88;
  --tertiary-sage: #B8C5A6;
  --warm-cream: #F8F6F0;
  --soft-white: #FEFCF7;
  --forest-shadow: #5A6B52;
  --deep-forest: #3E4A3A;
  --ink: #2F3A2B;
  --ink-muted: #5A6B52;

  /* Layout */
  --toolbar-h: 56px;
  --sidebar-w: 280px;        /* left filmstrip */
  --inspector-w: 340px;      /* right panel */
  --stage-pad: 24px;
  --container-max: 1920px;

  /* Slide metrics */
  --slide-ratio: 16 / 9;     /* 16:9 default; change to 4/3 if needed */
  --slide-w: 1600px;         /* logical slide width for design */
  --slide-bg: #FFFFFF;
  --slide-radius: 16px;

  /* Grid */
  --grid-on: 1;              /* 1 = show, 0 = hide (toggle via JS) */
  --grid-color: rgba(122,132,113,0.18);
  --grid-sub-color: rgba(122,132,113,0.10);

  /* Depth & rings */
  --shadow-1: 0 1px 2px rgba(34,41,32,.06), 0 8px 24px rgba(34,41,32,.07);
  --shadow-2: 0 10px 40px rgba(34,41,32,.10), 0 20px 60px rgba(34,41,32,.08);
  --ring: 0 0 0 3px color-mix(in srgb, var(--soft-white) 70%, transparent),
          0 0 0 5px color-mix(in srgb, var(--secondary-sage) 85%, #000 15%);

  /* Motion */
  --ease: cubic-bezier(.2,.8,.2,1);
  --dur-1: 120ms;
  --dur-2: 220ms;

  /* Touch target & type */
  --target: 40px;
  --font-display: 'Questrial', system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif;
  --font-body: 'Nunito', system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial, sans-serif;

  /* Zoom (applied as transform scale to the slide) */
  --zoom: 1;                 /* set via JS: 0.5 .. 2 */

  /* Annotation defaults */
  --hl-yellow: #FFF2A8;
  --hl-green: #CDE7C4;
  --hl-rose: #FFD6C9;
  --hl-blue: #CDE6FF;
  --pen-stroke: #7A8471;
  --pen-width: 3px;
}

