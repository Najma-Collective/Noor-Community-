  border: 1px solid var(--primary-sage);
  background: linear-gradient(180deg, color-mix(in srgb, var(--primary-sage) 92%, #fff 8%), var(--primary-sage));
  color: #fff; font-weight: 700; cursor: pointer;
  transition: transform var(--dur-1) var(--ease), box-shadow var(--dur-2) var(--ease), background var(--dur-2) var(--ease);
  -webkit-tap-highlight-color: transparent;
  user-select: none;
}
.btn:hover { transform: translateY(-1px); }
.btn:active { transform: translateY(0); }
.btn:focus-visible { outline: none; box-shadow: var(--ring); }

.btn--ghost {
  background: #fff; color: var(--primary-sage);
  border-color: color-mix(in srgb, var(--tertiary-sage) 70%, var(--primary-sage) 30%);
}
.btn--danger {
  background: linear-gradient(180deg, #A55 0%, #844 100%); border-color: #844;
}

