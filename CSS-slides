  display: grid;
  grid-template-rows: var(--toolbar-h) 1fr;
  grid-template-columns: 1fr;
  height: 100dvh;
  width: 100%;
  max-width: 100%;
}

/* Top toolbar */
.app__toolbar {
  display: grid;
  grid-template-columns: auto 1fr auto;
  align-items: center;
  gap: 12px;
  padding: 0 12px;
  background: color-mix(in srgb, var(--soft-white) 85%, white 15%);
  border-bottom: 1px solid rgba(122,132,113,0.18);
  box-shadow: 0 1px 0 rgba(255,255,255,0.6) inset;
}

.app__brand {
  display: flex; align-items: center; gap: 10px; min-width: 220px;
  font-family: var(--font-display); font-weight: 700; letter-spacing: .2px;
  color: var(--deep-forest);
}

.toolbar__group { display: flex; align-items: center; gap: 8px; }

/* Buttons */
.btn {
  min-height: var(--target);
  padding: 8px 14px;
  display: inline-flex; align-items: center; gap: 8px;
