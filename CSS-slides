  --shadow-2: 0 6px 24px rgba(34,41,32,0.08), 0 16px 36px rgba(34,41,32,0.08);
  --shadow-glow: 0 0 45px 10px color-mix(in srgb, var(--secondary-sage) 15%, transparent);

  /* App Dimensions */
  --toolbar-h: 72px;
  --workspace-pad: 24px;
  --stage-pad: clamp(32px, 5vw, 64px);
  --stage-radius: 18px;
  --slide-aspect-w: 16;
