}
.zoom__value { min-width: 48px; text-align: center; font-variant-numeric: tabular-nums; }

/* Workspace (below toolbar) */
.app__workspace {
  display: grid;
  grid-template-columns: var(--sidebar-w) minmax(600px, 1fr) var(--inspector-w);
  gap: 0;
  height: 100%;
  min-height: 0; /* allow children to size */
}

/* Filmstrip */
.filmstrip {
  display: grid;
  grid-auto-rows: max-content;
  gap: 10px;
  padding: 14px;
  overflow: auto;
  background: color-mix(in srgb, var(--soft-white) 90%, #fff 10%);
  border-right: 1px solid rgba(122,132,113,0.18);
}
.filmstrip__thumb {
  aspect-ratio: var(--slide-ratio);
  background: #fff;
  border-radius: 10px;
  border: 1px solid rgba(122,132,113,0.20);
  box-shadow: var(--shadow-1);
  overflow: hidden;
  position: relative;
}
.filmstrip__thumb.is-active { outline: 3px solid color-mix(in srgb, var(--secondary-sage) 70%, #000 10%); outline-offset: 2px; }

/* Inspector (properties, notes) */
.inspector {
  overflow: auto;
  padding: 16px;
  background: color-mix(in srgb, var(--soft-white) 90%, #fff 10%);
  border-left: 1px solid rgba(122,132,113,0.18);
}

/* Stage shell (center) */
.stage {
  position: relative;
  overflow: hidden; /* scroll only the inner scroller */
  background:
    radial-gradient(800px 600px at 20% 0%, rgba(156,175,136,0.08) 0%, transparent 70%),
    radial-gradient(700px 500px at 80% 100%, rgba(90,107,82,0.06) 0%, transparent 65%);
  display: grid;
}

/* Pan/scroll area for big canvases */
.stage__scroller {
  overflow: auto;
  padding: var(--stage-pad);
  display: grid;
  place-items: center;
  overscroll-behavior: contain;
  height: 100%;
  width: 100%;
}

/* The viewport ensures strict clipping (no overspill). 
   The actual slide content sits inside and is scaled via --zoom. */
.slide-viewport {
  position: relative;
  background: transparent;
  transform: translateZ(0);
  contain: layout paint style; /* isolate expensive paints */
  will-change: transform;
}

.slide {
  width: clamp(960px, 90vw - var(--sidebar-w) - var(--inspector-w), min(var(--container-max), var(--slide-w)));
  aspect-ratio: var(--slide-ratio);
  background: var(--slide-bg);
  border-radius: var(--slide-radius);
  box-shadow: var(--shadow-2);
  overflow: hidden; /* HARD CLIP to prevent overspill */
  position: relative;
  transform-origin: top left;
  transform: scale(var(--zoom));
}

/* Inner content layer where your slide elements live */
.slide__content {
  position: absolute; inset: 0;
  padding: 48px; /* inner margin for safe text zones */
  display: block;
  overflow: hidden; /* secondary guardrail */
}

/* 12x12 GRID OVERLAY (toggle with [data-grid="on"]) */
.slide[data-grid="on"]::before {
  content: "";
  position: absolute; inset: 0;
  pointer-events: none;
  background-image:
    linear-gradient(to right, var(--grid-color) 1px, transparent 1px),
    linear-gradient(to bottom, var(--grid-color) 1px, transparent 1px),
    linear-gradient(to right, var(--grid-sub-color) 1px, transparent 1px),  /* sub-divs (quarters) */
    linear-gradient(to bottom, var(--grid-sub-color) 1px, transparent 1px);
  background-size:
    calc(100% / 12) 100%,
    100% calc(100% / 12),
    calc(100% / 48) 100%,
    100% calc(100% / 48);
  mix-blend-mode: multiply;
  opacity: var(--grid-on);
  border-radius: inherit;
}

/* Safe area guides (optional) */
.slide[data-guides="on"]::after {
  content: "";
  position: absolute; inset: 40px;
  border-radius: 12px;
  border: 2px dashed rgba(122,132,113,0.3);
  pointer-events: none;
}

