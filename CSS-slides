  --font-size-base: clamp(1rem, 0.95rem + 0.2vw, 1.1rem);
  --font-size-md: clamp(1.125rem, 1.05rem + 0.35vw, 1.35rem);
  --font-size-lg: clamp(1.35rem, 1.2rem + 0.6vw, 1.7rem);
  --font-size-xl: clamp(1.8rem, 1.1rem + 2vw, 3rem);
  --font-size-xxl: clamp(2.5rem, 1.4rem + 3.2vw, 4.5rem);

